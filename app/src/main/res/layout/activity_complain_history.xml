<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ComplainHistory">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_circle"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="15dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/complaintHistory"
        android:transitionName="ComplainHis"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

    <ImageView
        android:layout_width="75dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_format_align_left_black_24dp"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_height="wrap_content">



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Complain History"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:textColor="#000000"/>

    </LinearLayout>

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_below="@id/complaintHistory"
        android:layout_margin="25dp"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view_complain_history"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_below="@+id/complaintHistory"
            android:layout_height="match_parent"
            />


    </android.support.v7.widget.CardView>



</RelativeLayout>